.page {
  background-color: #f8fafc;
}

.user-card {
  margin-top: 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 40rpx;
  background-color: #fff;
  border-radius: 16rpx;
  box-shadow: 0 6rpx 16rpx rgba(15, 23, 42, .06);
}

.avatar-img {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  margin-bottom: 20rpx;
  border: 4rpx solid #eee;
}

.nickname {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.actions {
  margin-top: 40rpx;
  padding: 0 24rpx;
}

.btn {
  width: 100%;
  padding: 24rpx;
  font-size: 32rpx;
  border-radius: 12rpx;
  text-align: center;
}

.danger {
  background-color: #fee2e2;
  color: #b91c1c;
}
